<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lv.bottomdialogsdemo.MainActivity">

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:onClick="showBottomDialog"
       android:text="bottom-dialog"
       android:textAllCaps="false"/>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:onClick="showOneDialog"
       android:text="one-dialog"
       android:textAllCaps="false"/>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:onClick="showBottomSheet"
       android:text="BottomSheetList-dialog"
       android:textAllCaps="false"/>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:onClick="showCustBottomSheet"
       android:text="cust-dialog"
       android:textAllCaps="false"/>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:onClick="showFragmentDialog"
       android:text="fragment-dialog"
       android:textAllCaps="false"/>
</LinearLayout>
